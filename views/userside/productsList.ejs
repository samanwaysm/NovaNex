              </div>
             <% if(product.length>0){ %> 
              <% for(let i=0;i<product.length;i++) { %>
              <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                  <div class="card product-item border-0 mb-4">
                    <a href="/productsPage?id=<%= product[i]._id %>">
                      <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                          <img class="img-fluid w-100" src="<%= product[i].image[0] %>" alt="" style="height: 280px;">
                      </div>
                    </a>
                      <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                         <% if(product[i].offer!=null) {%>
                            <div class="clearfix mb-3">
                                <span class="float-start badge rounded-pill bg-success text-white">Special offer:
                                  <%=product[i].offer.discount %>%</span>
                              </div>
                          <% } %>
                          <h6 class="text-truncate mb-3"><%= product[i].productName %></h6>
                          <div class="d-flex justify-content-center">
                              <h6>&#8377;
                                <%#= product[i].lastPrice %>
                                <% if(product[i].offer!=null) {%>
                                    <%=product[i].lastPrice - product[i].lastPrice*(product[i].offer.discount/100) %>                  
                                <% }else{ %>
                                    <%=product[i].lastPrice%>
                                <% } %>
                            </h6><h6 class="text-muted ml-2"><del>&#8377;<%= product[i].firstPrice %></del></h6>
                          </div>
                      </div>
                      <div class="card-footer d-flex justify-content-center bg-light border">
                        <% if(cartDetails.includes(product[i]._id.toString())){ %>
                        <a href="/userCart" class="btn btn-sm text-dark p-1.5" style="border-color:rgb(151, 40, 151);border-radius: 15px;" >Go to Cart</a>
                        <%}else if(product[i].inStock <= 0){  %>
                            <a href="/" class="btn btn-sm text-dark p-1.5" style="border-color:rgb(151, 40, 151);border-radius: 15px;" >Out of Stock</a>
                        <% }else{ %>
                            <a href="/api/addToCart?id=<%= product[i]._id %>" class="btn btn-sm text-dark p-1.5" style="border-color:rgb(151, 40, 151);border-radius: 15px;" >Add to Cart</a>
                        <% } %>

                          
                          <!-- <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a> -->
                      </div>
                      
                  </div>
              </div>
              <% } %> 
