                            <% if (orders[i].orderItems.orderStatus==='Delivered' ) { %>
                                <button class="p-1" style="border: solid 1px #000"
                                    onclick="downloadInvoice('<%=orders[i]._id %>')"><i
                                        class="bi bi-receipt text-black"></i></button>
