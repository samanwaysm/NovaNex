<%-include("includes/header")-%>
<link rel="stylesheet" href="css/updateAccount.css">

<body>

    <div class="container custom-container mb-4 pt-5">
        <h2 class="pt-3">Update Account</h2>
        <form class="row" method="post" action="/api/updateUser?id=<%=user._id%>" id="form" novalidate>
            <!-- <hr class="colorgraph"> -->

            <div class="col-md-6 mx-auto my-3">
                <p>Name</p>
                <input type="text" class="form-control border-3" id="name" name="name" placeholder="Name" value="<%=user.name%>">
                <p class="err-msg d-flex justify-content-center" id="errorElement1" style=" color: red;"></p>
            </div>
            <div class="col-md-6 mx-auto my-3">
                <p>Old Password</p>
                <input type="password" class="form-control border-3" id="oldPassword" name="oldPassword" placeholder="Old Password" value="">
                <p class="err-msg d-flex justify-content-center" id="errorElement3" style=" color: red;">
                    <% if(message){ %>
                        <%=message %>
                    <% } %>
                </p>
            </div>
            <div class="col-md-6 mx-auto my-3">
                <p>Email</p>
                <input type="email" class="form-control border-3" id="email" name="email" placeholder="Email" value="<%=user.email%>" disabled>
                <p class="error m-0 text-danger">
                    
                  </p>
            </div>
            <div class="col-md-6 mx-auto my-3">
                <p>New Password</p>
                <input type="password" class="form-control border-3" id="newPassword" name="newPassword" placeholder="New Password" value="">
                <p class="err-msg d-flex justify-content-center" id="errorElement4" style=" color: red;"></p>
            </div>
            <div class="col-md-6 mx-auto my-3">
                <p>Phone</p>
                <input type="text" class="form-control border-3" id="phone" name="phone" placeholder="Phone" value="<%=user.phone%>">
                <p class="err-msg d-flex justify-content-center" id="errorElement2" style=" color: red;"></p>
            </div>
            <div class="col-md-6 mx-auto my-3">
                <p>Confirm Password</p>
                <input type="password" class="form-control border-3" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" value="">
                <p class="err-msg d-flex justify-content-center" id="errorElement5" style=" color: red;"></p>
            </div>
            <!-- <hr class="colorgraph"> -->

            <div class="col-12 mx-auto text-center">
                <button type="submit" id="submit" class="btn btn-save w-25">Save</button>
            </div>
        </form>

    </div>

    <script src="js/updateProfileValid.js"></script>
</body>
<%-include("includes/footer")-%>