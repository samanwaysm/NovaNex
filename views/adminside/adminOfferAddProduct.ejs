            <form action="/admin/addProductOffer"  method="post" id="form">
                <div class="container " style="background-color: #fff">
                    <div class="input-box">
                        <div>
                            <label for="discount">Product : </label>
                            <input type="text" name="productName" id="productName">
                            <p id="errorElement1" class="text-danger"></p>
                        </div>   
                    </div>
                    <div class="input-box">    
                        <div>
                            <label for="discount">Discount(%) : </label>
                            <input type="number" name="discount" id="discount">
                            <p id="errorElement2" class="text-danger"></p>
                        </div>                      
                    </div>
                    <div class="input-box">    
                        <div>
                            <label for="discount">Offer Expiry : </label>
                            <input type="date" name="expiredDate" id="expiredDate">
                            <p id="errorElement3" class="text-danger" ></p>
                        </div>                     
                    </div>                          
                    <div class="btn-container">
                        <button  class="btn" type="submit">Submit</button>
                    </div>    
                </div>
            </form>
